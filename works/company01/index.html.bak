<script>
    /* humbメニューの表示、非表示 */
    $(function () {
        $(document).on("click", "#navToggle", function () {//headerに .openNav を付加・削除
            $('header').toggleClass('openNav');
        });
    });

    /*コンテンツエリアクリックでhumbメニューを閉じる*/
    $(function () {
        $(document).on("click", "#main", function () {//headerに .openNav を付加・削除
            $('header').removeClass('openNav');
        });
    });
</script>

